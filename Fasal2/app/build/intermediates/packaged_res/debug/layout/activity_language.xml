<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCF3CC"
    tools:context=".Language">

    <Button
        android:id="@+id/tamil"
        android:layout_width="175dp"
        android:layout_height="165dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="96dp"
        android:backgroundTint="#D3F3D3"
        android:elevation="100dp"
        android:text="TAMIL"
        android:textColor="#000000"
        android:textSize="20sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/kannada"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/en" />

    <Button
        android:id="@+id/en"
        android:layout_width="175dp"
        android:layout_height="165dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="#D3F3D3"
        android:elevation="100dp"
        android:text="ENGLISH"
        android:textColor="#000000"
        android:textSize="20sp"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toStartOf="@+id/hi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/kannada"
        android:layout_width="175dp"
        android:layout_height="165dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="96dp"
        android:backgroundTint="#D3F3D3"
        android:text="KANNADA"
        android:textColor="#000000"
        android:textSize="20sp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tamil"
        app:layout_constraintTop_toBottomOf="@+id/hi" />

    <Button
        android:id="@+id/hi"
        android:layout_width="175dp"
        android:layout_height="165dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#D3F3D3"
        android:elevation="100dp"
        android:text="HINDI"
        android:textColor="#000000"
        android:textSize="20sp"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/en"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>